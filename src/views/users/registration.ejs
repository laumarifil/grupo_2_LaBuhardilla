<!DOCTYPE html>
<html lang="en">

    <head>

        <%- include("../partials/head")%>

    </head>

    <body>

        <%- include("../partials/header")%>
        
        <div class="container containerRegistration">
            <div class="login">
                <h2>Ingresar</h2>
                <div class="login-items">
                    <label class="correo"> Acceder con Correo</label>
                    <input type="text" placeholder="Correo" class="correo">
                    <input type="password" placeholder="Contraseña" class="pass">
                    <input type="submit" class="submit" value="login">
                    <button class="fb"><i class="fab fa-facebook-f"></i> Acceder con Facebook</button>
                    <button class="google"><i class="fab fa-google"></i> Acceder con Google</button>
                </div>
            </div>
            <div class="register">
                <h2>Crear cuenta</h2>
                <form action="/users/registration" method="POST">
                    <input type="text" placeholder="Nombre" class="nombre" name="name">
                    <input type="text" placeholder="Apellido" class="nombre" name="surname">
                    <input type="text" placeholder="Correo" class="correo" name="email">
                    <input type="password" placeholder="Contraseña" class="pass" name="password">
                    <input type="password" placeholder="Confirma contraseña" class="repass" name="repassword">
                    <input type="file" placeholder="Nombre" class="nombre" name="image">
                    <input type="submit" class="submit" value="REGISTRARSE">
                </form>
            </div>
        </div>

        <%- include("../partials/footer")%>
        
        <%- include("../partials/scripts")%>
        
    </body>

</html>