  <header>

    <div class="container d-flex justify-content-between">
      <!-- Collapsed Sidebar -->
      <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/">Home</a>
        <a href="/products">Productos</a>
        <a href="/products/productsDeco">Deco</a>
        <a href="/productsBazar">Bazar</a>
        <a href="/productsMuebles">Muebles</a>
        <a href="/productsIluminación">Iluminación</a>
        <a href="/productsWallArt">Wall Art</a>
       
       
       
       <% if(typeof locals.esAdmin != 'undefined' && locals.esAdmin == 1){ %> 
          <a href="/users">Usuarios</a>

      <% } %> 
        
       
      </div>

      <div id="main">       
        <button class="openbtn" onclick="openNav()">&#9776; <a href="/" class="logo"><img height="100" width="150" src="/images/logo-la-buhardilla.jpeg" alt=""></a></button>       
      </div>

      <!-- Search bar -->
      <form action="/products/searchProduct" class="busqueda" method="POST" id="search">
        <input type="text" placeholder="¿Qué buscás?" id="searchText" name="key">
        <button type="submit"><i class="fas fa-search"></i></button>
      </form>
      
      <!-- Login/Cart -->
      <ul class="usuario nav flex-column " type="none">
        
        <% if(typeof locals.session != 'undefined') { %> 
        <li><a href="/users/login"><i class="far fa-user"></i> <%= locals.session.name %> </a></li>
        <% } else { %>
          <li><a href="/users/login"><i class="far fa-user"></i>Iniciar</a></li>
        <% } %>          
        
        <% if(typeof locals.session != 'undefined') { %>
        <li><a href="/users/logout"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</a></li>
        <% } else { %>
          <li><a href="/users/registration"><i class="far fa-user"></i>Registro</a></li>
        <% } %>

        <li><a href="/cart"><i class="fas fa-shopping-cart"></i> <%= locals.cartNumber %> </a><span style="color:  #77cc8a;font-size: 20px;" id="myButtonCart"></span> <li>
      </ul>
         

    </div>
    
  </header>