<header class='sticky-top'>

  <div class="container d-flex justify-content-between">
    <!-- Collapsed Sidebar -->
    <div id="mySidebar" class="sidebar">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
      <a href="/">Home</a>
      <a href="/products">Productos</a>
      <a href="/products/1">Deco</a>
      <a href="/products/2">Bazar</a>
      <a href="/products/3">Muebles</a>
      <a href="/products/4">Iluminación</a>
      <a href="/products/5">Wall Art</a>
    
      
     
     
     
     <% if(typeof locals.esAdmin != 'undefined' && locals.esAdmin == 1){ %> 
        <a href="/users">Usuarios</a>
    <% } %> 
      
     
    </div>

    <div id="main">       
      <button class="openbtn" onclick="openNav()">&#9776; <a href="/" class="logo"><img height="80" width="125" src="/images/logo-la-buhardilla.jpeg" alt=""></a></button>       
    </div>

    <!-- Search bar -->
    <form action="/products/searchProduct" class="busqueda" method="POST" id="search">
      <input type="text" placeholder="¿Qué buscás?" id="searchText" name="key">
      <button type="submit"><i class="fas fa-search"></i></button>
    </form>
    
    <!-- Login/Cart -->
    
  <div class="usuario nav flex-column" type="none">
      
      <% if(typeof locals.session != 'undefined') { %> 
      <a href="/users/login"><i class="far fa-user"></i> <%= locals.session.name %> </a>
      <% } else { %>
        <a href="/users/login"><i class="far fa-user"></i> Mi cuenta </a>
      <% } %>
              
      <% if(typeof locals.session != 'undefined') { %>
      <a href="/users/logout"><i class="fas fa-sign-out-alt"></i> Cerrar sesión</a>
      
      <% } %>
      <a href="/cart"><i class="fas fa-shopping-cart"></i>  <%= locals.cartNumber %> </a><span style="color:  #77cc8a;font-size: 20px;" id="myButtonCart"></span>


      </div>
       

  </div>
  
</header>