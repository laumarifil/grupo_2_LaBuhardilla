<!DOCTYPE html>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/styleCarrito.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">  
</head>

<%- include("./partials/head")%>

<body>

    <div class="container">
        <div class="row">

            <h1 class="col-12">Carrito de compras</h1>

            <div class="col-3"></div>
            <section class="col-6 productosCarrito row">

                <article class="col-12 cabecera row">
                    <h3 class="col-9">Producto</h3>
                    <h3 class="col-3">Subtotal</h3>
                </article>

                <article class="col-12 productoCarrito row">
        
                    <article class="col-10 row">
                        <img class="col-4" src="/images/producto1.jpg">
                        <div class="col-8">
                            <h5>Titulo</h5>
                            <h5>Precio</h5>
                            <input type="number" class="col-4" min="1" value="1">
                        </div>
                    </article>
    
                    <article class="col-2">
                        <h5>Subtotal</h5>
                    </article>

                </article>

            </section>
            <div class="col-3"></div>

            <section class="col-12 sumaSubtotal">
                <h4 >Subtotal $ 0000</h4>
            </section>
            <div class="col-3"></div>
            <section class="adicionales col-6 row">

                <div class="calculoEnvio col-12">
                    <input type="radio" name="envio" value="envio">  Envio
                    <input type="text" class="col-3">
                    <button class="btn btn-success" type="button">Calcular Envio</button>
                </div>
                <div class="col-12 retiroSucursal">
                    <input type="radio" name="envio" value="retiro">  Retiro en local
                </div>

            </section>
            <div class="col-3"></div>

            <section class="col-12 totalCompras">

                <h3>Total $ 0000</h3>
                <button class="btn btn-success" type="button">Pagar</button>


            </section>

        </div>
    </div>    

    <%- include("./partials/footer")%> 


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="/javascripts/jsfront.js"></script>

</body>